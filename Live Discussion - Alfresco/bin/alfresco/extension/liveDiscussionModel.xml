<?xml version="1.0" encoding="UTF-8"?>
<model name="cig:liveDiscussionModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Live Discussion Content Model</description>
	<version>1.0</version>
	
	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<namespaces>
		<namespace prefix="cig" uri="http://discussion.cignex.com" />
	</namespaces>


	<aspects>
		<aspect name="cig:invitable">
			<title>Discussion Invitable</title>
			<properties>
				<property name="cig:nodeRefs">
	               <title>Topic NodeRef and inviting user</title>
	               <type>d:text</type>
	               <multiple>true</multiple>
	            </property>
			</properties>
	    </aspect>
	</aspects>	

</model>
