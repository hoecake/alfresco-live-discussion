<alfresco-config>
	<config evaluator="string-compare" condition="DocLibActions">
		<actions>
			<action id="live-discussion" type="pagelink"
				label="Discussions">
				<param name="page">live-discussion?nodeRef={node.nodeRef}</param>
			</action>
		</actions>
		<actionGroups>
			<actionGroup id="document-browse">
				<action index="500" id="live-discussion" />
			</actionGroup>
			<actionGroup id="folder-browse">
				<action index="500" id="live-discussion" />
			</actionGroup>
			<actionGroup id="document-details">
				<action index="500" id="live-discussion" />
			</actionGroup>
			<actionGroup id="folder-details">
				<action index="500" id="live-discussion" />
			</actionGroup>
		</actionGroups>
	</config>
</alfresco-config>